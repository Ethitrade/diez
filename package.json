{
  "name": "diez",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "examples/*/web"
  ],
  "version": "1.0.0-alpha0",
  "description": "Diez monorepo.",
  "license": "Proprietary",
  "devDependencies": {
    "@strictsoftware/typedoc-plugin-monorepo": "^0.2.1",
    "@types/chalk": "^2.2.0",
    "@types/commander": "^2.12.2",
    "@types/fs-extra": "^5.0.4",
    "chalk": "^2.4.2",
    "commander": "^2.19.0",
    "enquirer": "^2.3.0",
    "fs-extra": "^7.0.1",
    "fs-walk": "^0.0.2",
    "glob": "^7.1.3",
    "lerna": "^3.13.1",
    "ts-morph": "^1.3.3",
    "ts-node": "^8.1.0",
    "tslint": "^5.15.0",
    "tslint-config-haiku": "^1.0.20",
    "typedoc": "^0.14.2",
    "typedoc-plugin-no-inherit": "^1.1.6",
    "typescript": "^3.4.1"
  },
  "scripts": {
    "build-examples": "ts-node ./scripts/cli.ts build-examples",
    "create-package": "ts-node ./scripts/cli.ts create-package",
    "clean": "ts-node ./scripts/cli.ts clean",
    "docs": "ts-node ./scripts/cli.ts generate-docs",
    "compile": "lerna run compile",
    "watch": "lerna run compile && lerna run --parallel watch",
    "fix": "lerna run fix --no-bail",
    "health": "lerna run health --no-bail",
    "lint": "lerna run lint --no-bail",
    "test": "lerna run test --no-bail",
    "postinstall": "yarn compile"
  },
  "resolutions": {
    "istanbul-api": "^2.0.0"
  }
}
