{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "inlineSources": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "newLine": "lf"
  }
}
