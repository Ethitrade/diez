{{#each styleFonts as |font|}}
@font-face {
  {{#each font.declaration}}
  {{@key}}: {{{this}}};
  {{/each}}
}
{{/each}}

{{#each styleVariables}}
${{this.name}}: {{{this.value}}};
{{#if this.isNumber}}
${{this.name}}-px: #{$ {{~this.name~}} }px;
${{this.name}}-pt: #{$ {{~this.name~}} }pt;
${{this.name}}-em: #{$ {{~this.name~}} }em;
${{this.name}}-rem: #{$ {{~this.name~}} }rem;
{{/if}}
{{/each}}

{{#each styleSheets as |group|}}
@mixin {{group.selector}} {
  {{#each group.declaration}}
  {{@key}}: {{{this}}};
  {{/each}}
}

{{/each}}
{{#each styleMedias as |media|}}
@media {{media.selector}} {
  {{#each media.declaration}}
  {{@key}}: {{{this}}};
  {{/each}}
  {{#each media.rules as |mediaRule|}}
  .{{mediaRule.selector}} {
    {{#each mediaRule.declaration}}
    {{@key}}: {{{this}}};
    {{/each}}
  }
  {{/each}}
}
{{/each}}
