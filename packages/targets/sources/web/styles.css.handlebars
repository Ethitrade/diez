{{#each styleFonts as |font|}}
@font-face {
  {{#each font.declaration}}
  {{@key}}: {{{this}}};
  {{/each}}
}
{{/each}}

:root {
  {{#each styleVariables}}
  --{{this.name}}: {{{this.value}}};
  {{#if this.isNumber}}
  --{{this.name}}-px: {{{this.value}}}px;
  --{{this.name}}-pt: {{{this.value}}}pt;
  --{{this.name}}-em: {{{this.value}}}em;
  --{{this.name}}-rem: {{{this.value}}}rem;
  {{/if}}
  {{/each}}
}

{{#each styleSheets as |group|}}
.{{group.selector}} {
  {{#each group.declaration}}
  {{@key}}: {{{this}}};
  {{/each}}
}
{{#each group.rules as |media|}}

@media {{media.selector}} {
  .{{group.selector}} {
    {{#each media.declaration}}
    {{@key}}: {{{this}}};
    {{/each}}
  }
}
{{/each}}

{{/each}}
